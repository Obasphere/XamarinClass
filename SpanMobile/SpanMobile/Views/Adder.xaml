<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpanMobile.Views.Adder">
    <ContentPage.Content>
        <StackLayout Spacing="13" Padding="15">
            <Label Text="Result" FontSize="Medium" />
            <Entry x:Name="ans" FontSize="Medium" />
            <StackLayout HorizontalOptions="EndAndExpand">
                <Label Text="Number 1" FontSize="Medium" />
                <Entry x:Name="num1" FontSize="Medium" />
            </StackLayout>
            <StackLayout HorizontalOptions="EndAndExpand">
                <Label Text="Number 2" FontSize="Medium" />
                <Entry x:Name="num2" FontSize="Medium" Margin="0" />
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Button Text="Calculate" Clicked="Btn_Clicked" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>